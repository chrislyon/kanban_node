block styles 
	link(rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css")

block scripts
	// Jquery Origine
	//script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
	script(src='https://cdn.rawgit.com/konvajs/konva/1.0.0/konva.min.js')
	script(src="https://code.jquery.com/jquery-1.12.4.js")
	script(src="https://code.jquery.com/ui/1.12.0/jquery-ui.js")

block body
	// le .container pour les objets jade-bootstrap 
	.container
		#entete
			p 
				Center 
					h2 TEST ENVOI DE POST
					button(type="submit" onclick="sendPost();" ) SEND_HTML
					button(type="submit" onclick="sendPostJSON();" ) SEND_JSON

	script.
		function sendPost(){

			data = { 'Tiers':'SRA', 'Description':'Essai de commentaire' };

			$.ajax({
				type: "POST",
				url: '/tp1',
				data: data,
			})
			  .done(function( msg ) {
			      alert( "Data Saved: " + msg );
			});
		}

		function sendPostJSON(){

			data = { 'Tiers':'JSON SRA', 'Description':'JSON Essai de commentaire' };

			$.ajax({
				type: "POST",
				url: '/tp1',
				data: data,
				dataType: 'json'
			})
			  .done(function( msg ) {
			      alert( "Data Saved: " + msg );
			});
		}
